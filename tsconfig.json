{
  "compilerOptions": {
    "outDir": "./dist",   
    "allowJs": true,     
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      "src/index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "extends": "./tsconfig.paths.json"
}
