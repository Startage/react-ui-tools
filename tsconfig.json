{
  "compilerOptions": {
    "outDir": "./build",   
    "allowJs": true,     
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "./src/components/*",
  ],
  "exclude": [
    "*.mdx"
  ],
}
